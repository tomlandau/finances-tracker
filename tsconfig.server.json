{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "node",
    "target": "ES2020",
    "outDir": "./dist",
    "rootDir": "./",
    "noEmit": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false
  },
  "include": [
    "server.ts",
    "api/**/*",
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src",
    "**/*.test.ts"
  ]
}
